<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/today_weather_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/today_weather_icon"
            android:textSize="60sp"/>

        <ImageView
            android:id="@+id/today_weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/today_weather_windAndPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/today_weather_icon"
            android:layout_centerHorizontal="true"
            android:textColor="#B2DFEE"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/reporttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/today_weather_windAndPower"
            android:layout_centerHorizontal="true"
            android:textColor="#B2DFEE"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/weather_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/today_night_date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/today_night_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/today_night_temp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/today_night_windAndPower"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/tomorrow_day_date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/tomorrow_day_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tomorrow_day_temp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tomorrow_day_windAndPower"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/tomorrow_night_date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/tomorrow_night_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tomorrow_night_temp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tomorrow_night_windAndPower"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/tdat_day_date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/tdat_day_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tdat_day_temp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tdat_day_windAndPower"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/tdat_night_date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/tdat_night_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tdat_night_temp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tdat_night_windAndPower"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"/>
    </LinearLayout>

</LinearLayout>